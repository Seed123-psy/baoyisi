        let loadedProducts = 2;

        function searchProducts() {
            const query = document.getElementById('search-input').value.toLowerCase();
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';
            let found = false;

            allProducts.forEach(function(product) {
                if (product.name.toLowerCase().includes(query) || product.params.toLowerCase().includes(query)) {
                    const isTourProduct = product.name.includes('盐田') || product.name.includes('体验') || product.name.includes('展览') || product.name.includes('跳伞');
                    const productItem = `
                        <div class="product-item">
                            <img src="${product.img}" alt="${product.name}">
                            <h3>${product.name}</h3>
                            <p class="price">${product.price}</p>
                            <p class="toggle-details" onclick="showProductDetails(${JSON.stringify(product)})">查看详情</p>
                            <button class="${isTourProduct ? 'reserve-btn' : 'buy-btn'}" onclick="addToCart({name: '${product.name}', price: '${product.price}'})">${isTourProduct ? '预约' : '添加至购物车'}</button>
                        </div>
                    `;
                    productList.insertAdjacentHTML('beforeend', productItem);
                    found = true;
                }
            });

            if (!found) {
                showAlert('未找到匹配的产品。您可以尝试搜索其他关键词，如“古法低钠老盐”“四阶控盐神器”“海盐冷萃咖啡棒”“海洋护齿牙膏”等');
            } else {
                document.getElementById('load-more-btn').style.display = 'block';
            }
        }

        function validateQuantity(input) {
            if (input.value < 1) {
                input.value = 1;
            }
        }

        // 绑定购买按钮和预约按钮点击事件
        function bindBuyButtons() {
            document.querySelector('.product-list').addEventListener('click', function(event) {
                if (event.target.classList.contains('buy-btn')) {
                    const product = {
                        name: event.target.parentElement.querySelector('h3').innerText,
                        price: event.target.parentElement.querySelector('.price').innerText
                    };
                    addToCart(product);
                } else if (event.target.classList.contains('reserve-btn')) {
                    const product = {
                        name: event.target.parentElement.querySelector('h3').innerText,
                        price: event.target.parentElement.querySelector('.price').innerText
                    };
                    addToCart(product);
                    alert('预约成功');
                }
            });
        }
        bindBuyButtons();

        // 加载更多产品的功能
        document.getElementById('load-more-btn').addEventListener('click', function() {
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';
            allProducts.slice(0, 4).forEach(function(product) {
                const productItem = `
                    <div class="product-item">
                        <img src="${product.img}" alt="${product.name}">
                        <h3>${product.name}</h3>
                        <p class="price">${product.price}</p>
                        <p class="toggle-details" onclick="toggleDetails(this)">查看详情</p>
                        <div class="details">
                            <p>销量：99+</p>
                            <p>产品参数：${product.params}</p>
                        </div>
                        <button class="buy-btn"><i class="fas fa-cart-plus"></i> 添加至购物车</button>
                    </div>
                `;
                productList.insertAdjacentHTML('beforeend', productItem);
            });
            loadedProducts = 4;
            this.style.display = 'none';
        });

        function showAlert(message) {
            alert(message);
        }

        // 调用 showInputModal() 函数来显示输入弹窗
        showInputModal();

        // 提交问题
        function submitQuestion() {
            const questionInput = document.getElementById('question-input');
            const question = questionInput.value.trim();
            if (question) {
                const answer = getAnswerFromKnowledgeBase(question);
                addQuestionToList(question, answer);
                questionInput.value = '';
            } else {
                alert('请输入问题');
            }
        }

        // 从知识库获取答案（模拟）
