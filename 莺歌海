    <!-- åŠ è½½æ›´å¤šäº§å“çš„åŠŸèƒ½ -->
    <script>

        // æ»šåŠ¨åŠ¨ç”»
        window.addEventListener('scroll', function() {
            document.querySelectorAll('.fade-in').forEach(function(element) {
                if (element.getBoundingClientRect().top < window.innerHeight) {
                    element.classList.add('visible');
                }
            });
        });

        // æ˜¾ç¤ºæˆ–éšè—å›ºå®šæ ‡é¢˜å’Œå¯¼èˆªæ 
        window.addEventListener('scroll', function() {
            const header = document.querySelector('.header');
            const stickyHeader = document.querySelector('.sticky-header');
            const nav = document.querySelector('.nav');
            if (window.scrollY > header.offsetHeight) {
                stickyHeader.classList.add('visible');
                nav.classList.add('sticky');
            } else {
                stickyHeader.classList.remove('visible');
                nav.classList.remove('sticky');
            }
        });

        // æ±‰å ¡èœå•
        function toggleMenu() {
            const navUl = document.querySelector('.nav ul');
            const hamburger = document.querySelector('.hamburger');
            navUl.classList.toggle('show');
            hamburger.classList.toggle('active');
        }

        // å¼¹çª—æ˜¾ç¤ºæ—¶é”å®šèƒŒæ™¯æ»šåŠ¨
        function showModal(modalId) {
            document.body.style.overflow = 'hidden';
            document.getElementById(modalId).style.display = 'block';
        }

        // å¼¹çª—å…³é—­æ—¶æ¢å¤æ»šåŠ¨
        function closeModal(modalId) {
            document.body.style.overflow = 'auto';
            document.getElementById(modalId).style.display = 'none';
        }

        // ESCé”®å…³é—­åŠŸèƒ½
        document.addEventListener('keydown', (e) => {
            if(e.key === 'Escape') {
                document.querySelectorAll('.modal').forEach(modal => {
                    modal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                });
            }
        });

        // ä¼˜åŒ–å¼¹çª—å…³é—­æ–¹å¼
        document.querySelectorAll('.modal').forEach(function(modal) {
            modal.addEventListener('click', function(event) {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        });

        // ä¼˜åŒ–è´­ç‰©è½¦åŠŸèƒ½
        const cart = [];
        const cartItemsList = document.getElementById('cart-items-list');
        const cartFloat = document.getElementById('cart-float');
        let totalItems = 0; // è´­ç‰©è½¦ä¸­çš„å•†å“æ€»æ•°

        function addToCart(product) {
            const existingProduct = cart.find(item => item.name === product.name);
            if (existingProduct) {
                existingProduct.quantity = 1; // å¦‚æœå•†å“å·²å­˜åœ¨ï¼Œå¢åŠ æ•°é‡
                console.log(`å•†å“å·²å­˜åœ¨ï¼Œæ•°é‡å¢åŠ åˆ° ${existingProduct.quantity}`);
            } else {
                product.quantity = 1; // å¦‚æœæ˜¯æ–°å•†å“ï¼Œåˆå§‹åŒ–æ•°é‡
                cart.push(product);
                totalItems += 1; // åªæœ‰æ–°å•†å“æ—¶æ‰å¢åŠ æ€»å•†å“æ•°é‡
                console.log(`æ–°å•†å“æ·»åŠ åˆ°è´­ç‰©è½¦ï¼š${product.name}`);
            }
            updateCartContent();
        }

        function checkout() {
            alert('ç»“ç®—æˆåŠŸ');
            closeModal('cart-modal');
        }

        function updateCartContent() {
            cartItemsList.innerHTML = '';
            totalItems = 0; // é‡ç½® totalItems
            cart.forEach(function(product) {
                const li = document.createElement('li');
                li.innerHTML = `
                    ${product.name} - å•ä»·: ${product.price} - æ•°é‡: ${product.quantity}
                    <div class="quantity-control">
                        <button class="quantity-btn" data-name="${product.name}" data-change="-1">-</button>
                        <input type="text" value="${product.quantity}" readonly>
                        <button class="quantity-btn" data-name="${product.name}" data-change="1">+</button>
                        <button class="remove-btn" data-name="${product.name}">åˆ é™¤</button>
                    </div>
                `;
                cartItemsList.appendChild(li);
                totalItems += product.quantity; // ç´¯åŠ æ€»å•†å“æ•°é‡
            });
            cartFloat.setAttribute('data-count', totalItems); // æ›´æ–°è´­ç‰©è½¦çº¢ç‚¹æ˜¾ç¤ºæ€»å•†å“æ•°é‡
            console.log(`æ›´æ–°åçš„æ€»å•†å“æ•°é‡ï¼š${totalItems}`);
        }

        document.addEventListener('click', function(event) {
            if (event.target.classList.contains('quantity-btn')) {
                const productName = event.target.getAttribute('data-name');
                const change = parseInt(event.target.getAttribute('data-change'));
                changeQuantity(productName, change);
            } else if (event.target.classList.contains('remove-btn')) {
                const productName = event.target.getAttribute('data-name');
                removeFromCart(productName);
            } else if (event.target.classList.contains('buy-btn') || event.target.classList.contains('reserve-btn')) {
                const product = {
                    name: event.target.parentElement.querySelector('h3').innerText,
                    price: event.target.parentElement.querySelector('.price').innerText
                };
                addToCart(product);
            }
        });

        function changeQuantity(productName, change) {
            const product = cart.find(item => item.name === productName);
            if (product) {
                const newQuantity = product.quantity + change;
                if (newQuantity > 0) {
                    totalItems += change; // æ›´æ–°æ€»å•†å“æ•°é‡
                    product.quantity = newQuantity;
                } else {
                    totalItems -= product.quantity; // å‡å»è¢«ç§»é™¤å•†å“çš„æ•°é‡
                    cart.splice(cart.indexOf(product), 1);
                }
                updateCartContent();
            }
        }

        function removeFromCart(productName) {
            const product = cart.find(item => item.name === productName);
            if (product) {
                totalItems -= product.quantity; // å‡å»è¢«ç§»é™¤å•†å“çš„æ•°é‡
                cart.splice(cart.indexOf(product), 1);
                updateCartContent();
            }
        }

        function toggleCartContent() {
            const cartContent = document.getElementById('cart-content');
            cartContent.style.display = cartContent.style.display === 'block' ? 'none' : 'block';
        }

        // ä½¿è´­ç‰©è½¦æ‚¬æµ®çƒå¯æ‹–åŠ¨å¹¶è®¾ç½®è¾¹ç•Œ
        let isDragging = false;
        let offsetX, offsetY;

        cartFloat.addEventListener('mousedown', function(e) {
            isDragging = true;
            offsetX = e.clientX - cartFloat.getBoundingClientRect().left;
            offsetY = e.clientY - cartFloat.getBoundingClientRect().top;
            cartFloat.style.transition = 'none';
            document.body.style.overflow = 'hidden';
        });

        document.addEventListener('mousemove', function(e) {
            if (isDragging) {
                let newX = e.clientX - offsetX;
                let newY = e.clientY - offsetY;

                const minX = 0;
                const minY = 0;
                const maxX = window.innerWidth - cartFloat.offsetWidth;
                const maxY = window.innerHeight - cartFloat.offsetHeight;

                if (newX < minX) newX = minX;
                if (newY < minY) newY = minY;
                if (newX > maxX) newX = maxX;
                if (newY > maxY) newY = maxY;

                cartFloat.style.left = `${newX}px`;
                cartFloat.style.top = `${newY}px`;
            }
        });

        document.addEventListener('mouseup', function() {
            isDragging = false;
            cartFloat.style.transition = 'background-color 0.3s ease, transform 0.2s ease';
            document.body.style.overflow = '';
        });

        // ä½¿è´­ç‰©è½¦æ‚¬æµ®çƒåœ¨æ‰‹æœºç«¯å¯æ‹–åŠ¨
        cartFloat.addEventListener('touchstart', function(e) {
            isDragging = true;
            offsetX = e.touches[0].clientX - cartFloat.getBoundingClientRect().left;
            offsetY = e.touches[0].clientY - cartFloat.getBoundingClientRect().top;
            cartFloat.style.transition = 'none';
            document.body.style.overflow = 'hidden';
        });

        document.addEventListener('touchmove', function(e) {
            if (isDragging) {
                let newX = e.touches[0].clientX - offsetX;
                let newY = e.touches[0].clientY - offsetY;

                const minX = 0;
                const minY = 0;
                const maxX = window.innerWidth - cartFloat.offsetWidth;
                const maxY = window.innerHeight - cartFloat.offsetHeight;

                if (newX < minX) newX = minX;
                if (newY < minY) newY = minY;
                if (newX > maxX) newX = maxX;
                if (newY > maxY) newY = maxY;

                cartFloat.style.left = `${newX}px`;
                cartFloat.style.top = `${newY}px`;
            }
        });

        document.addEventListener('touchend', function() {
            isDragging = false;
            cartFloat.style.transition = 'background-color 0.3s ease, transform 0.2s ease';
            document.body.style.overflow = '';
        });

        // æœç´¢åŠŸèƒ½
        const allProducts = [
