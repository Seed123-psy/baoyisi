        let loadedProducts = 2;

        function searchProducts() {
            const query = document.getElementById('search-input').value.toLowerCase();
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';
            let found = false;

            allProducts.forEach(function(product) {
                if (product.name.toLowerCase().includes(query) || product.params.toLowerCase().includes(query)) {
                    const isTourProduct = product.name.includes('ç›ç”°') || product.name.includes('ä½“éªŒ') || product.name.includes('å±•è§ˆ') || product.name.includes('è·³ä¼');
                    const productItem = `
                        <div class="product-item">
                            <img src="${product.img}" alt="${product.name}">
                            <h3>${product.name}</h3>
                            <p class="price">${product.price}</p>
                            <p class="toggle-details" onclick="showProductDetails(${JSON.stringify(product)})">æŸ¥çœ‹è¯¦æƒ…</p>
                            <button class="${isTourProduct ? 'reserve-btn' : 'buy-btn'}" onclick="addToCart({name: '${product.name}', price: '${product.price}'})">${isTourProduct ? 'é¢„çº¦' : 'æ·»åŠ è‡³è´­ç‰©è½¦'}</button>
                        </div>
                    `;
                    productList.insertAdjacentHTML('beforeend', productItem);
                    found = true;
                }
            });

            if (!found) {
                showAlert('æœªæ‰¾åˆ°åŒ¹é…çš„äº§å“ã€‚æ‚¨å¯ä»¥å°è¯•æœç´¢å…¶ä»–å…³é”®è¯ï¼Œå¦‚â€œå¤æ³•ä½é’ è€ç›â€â€œå››é˜¶æ§ç›ç¥å™¨â€â€œæµ·ç›å†·èƒå’–å•¡æ£’â€â€œæµ·æ´‹æŠ¤é½¿ç‰™è†â€ç­‰');
            } else {
                document.getElementById('load-more-btn').style.display = 'block';
            }
        }

        function validateQuantity(input) {
            if (input.value < 1) {
                input.value = 1;
            }
        }

        // ç»‘å®šè´­ä¹°æŒ‰é’®å’Œé¢„çº¦æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        function bindBuyButtons() {
            document.querySelector('.product-list').addEventListener('click', function(event) {
                if (event.target.classList.contains('buy-btn')) {
                    const product = {
                        name: event.target.parentElement.querySelector('h3').innerText,
                        price: event.target.parentElement.querySelector('.price').innerText
                    };
                    addToCart(product);
                } else if (event.target.classList.contains('reserve-btn')) {
                    const product = {
                        name: event.target.parentElement.querySelector('h3').innerText,
                        price: event.target.parentElement.querySelector('.price').innerText
                    };
                    addToCart(product);
                    alert('é¢„çº¦æˆåŠŸ');
                }
            });
        }
        bindBuyButtons();

        // åŠ è½½æ›´å¤šäº§å“çš„åŠŸèƒ½
        document.getElementById('load-more-btn').addEventListener('click', function() {
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';
            allProducts.slice(0, 4).forEach(function(product) {
                const productItem = `
                    <div class="product-item">
                        <img src="${product.img}" alt="${product.name}">
                        <h3>${product.name}</h3>
                        <p class="price">${product.price}</p>
                        <p class="toggle-details" onclick="toggleDetails(this)">æŸ¥çœ‹è¯¦æƒ…</p>
                        <div class="details">
                            <p>é”€é‡ï¼š99+</p>
                            <p>äº§å“å‚æ•°ï¼š${product.params}</p>
                        </div>
                        <button class="buy-btn"><i class="fas fa-cart-plus"></i> æ·»åŠ è‡³è´­ç‰©è½¦</button>
                    </div>
                `;
                productList.insertAdjacentHTML('beforeend', productItem);
            });
            loadedProducts = 4;
            this.style.display = 'none';
        });

        function showAlert(message) {
            alert(message);
        }

        // è°ƒç”¨ showInputModal() å‡½æ•°æ¥æ˜¾ç¤ºè¾“å…¥å¼¹çª—
        showInputModal();

        // æäº¤é—®é¢˜
        function submitQuestion() {
            const questionInput = document.getElementById('question-input');
            const question = questionInput.value.trim();
            if (question) {
                const answer = getAnswerFromKnowledgeBase(question);
                addQuestionToList(question, answer);
                questionInput.value = '';
            } else {
                alert('è¯·è¾“å…¥é—®é¢˜');
            }
        }

        // ä»çŸ¥è¯†åº“è·å–ç­”æ¡ˆï¼ˆæ¨¡æ‹Ÿï¼‰
        function getAnswerFromKnowledgeBase(question) {
            const knowledgeBase = {
                'è¥å…»': 'æµ·ç›å¯Œå«çŸ¿ç‰©è´¨å’Œå¾®é‡å…ƒç´ ï¼Œå¦‚é’¾ã€é’™ã€é•ã€é”Œã€é“ç­‰ã€‚',
                'ä»‹ç»': 'æµ·ç›æ˜¯é€šè¿‡éœ²å¤©ç›ç”°æ—¥æ™’çš„ç¼“æ…¢è’¸å‘æ–¹å¼ï¼Œä½¿ç»“æ™¶ä½œç”¨å‘ç”Ÿåœ¨ç›æ°´è¡¨é¢ï¼Œç»“å‡ºè„†å¼±çš„è§’é”¥å½¢ä¸­ç©ºè–„ç‰‡ã€‚å…¥å£å¸¦ç€çŸ¿ç‰©è´¨å’Œæµ·æ°´å’¸é²œå‘³çš„æ„Ÿè§‰ï¼Œå›å‘³ä¸­è¿˜æœ‰ä¸€ä¸ç”˜ç”œã€‚',
                'ç”¨é€”': 'æµ·ç›é€‚ç”¨äºçƒ¹é¥ªè°ƒå‘³ã€è…Œåˆ¶é£Ÿå“ã€çƒ­æ•·æ³¡æ¾¡ç­‰ã€‚',
                'åŠŸæ•ˆ': 'é€‚é‡æ‘„å…¥æµ·ç›æœ‰åŠ©äºç»´æŒäººä½“ç”µè§£è´¨å¹³è¡¡ï¼Œä¿ƒè¿›éª¨éª¼å¥åº·ç­‰ã€‚',
                'ç§ç±»': 'æµ·ç›æœ‰å¤šç§ç±»å‹ï¼ŒåŒ…æ‹¬ç²—æµ·ç›ã€ç²¾åˆ¶æµ·ç›ã€åŠ ç¢˜æµ·ç›ã€æ— ç¢˜æµ·ç›ã€æµ·ç²¾ç›ï¼Œé›ªèŠ±ç›ç­‰ã€‚'
            };
            for (const keyword in knowledgeBase) {
                if (question.includes(keyword)) {
                    return `${knowledgeBase[keyword]} <a href="#">ç‚¹å‡»æŸ¥çœ‹ã€Šæµ·ç›å¥åº·ç™½çš®ä¹¦ã€‹</a>`;
                }
            }
            return 'â€œå°ç›æ­£åœ¨åŠªåŠ›å……ç”µä¸­ï¼<a href="#">ç‚¹å‡»æŸ¥çœ‹ã€Šæµ·ç›å¥åº·ç™½çš®ä¹¦ã€‹</a>â€';
        }

        // æ·»åŠ é—®ç­”åˆ°åˆ—è¡¨
        function addQuestionToList(question, answer) {
            const qaList = document.getElementById('qa-list');
            const qaItem = document.createElement('div');
            qaItem.classList.add('qa-item');
            qaItem.innerHTML = `
                <p><strong>é—®ï¼š</strong>${question}</p>
                <p><strong>ç­”ï¼š</strong>${answer}</p>
            `;
            qaList.appendChild(qaItem);
        }
    </script>
