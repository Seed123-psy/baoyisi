            { name: '海洋护齿牙膏 | 天然海盐，重塑口腔微生态。', price: '¥19.9', params: '海洋护齿牙膏，采用天然海盐成分，温和护齿。富含天然锶元素，有效预防龋齿，是口腔健康推荐产品。适合全家使用，为您的口腔健康保驾护航。', img: 'https://www.helloimg.com/i/2025/02/14/67aed6cb72a4b.jpg' },
            { name: '盐田观光 | 漫步盐田，触晶莹海盐，赏无垠盐池，品海风咸香', price: '¥49.9', params: '盐田观光，漫步盐田，触晶莹海盐，赏无垠盐池，品海风咸香。', img: 'https://www.helloimg.com/i/2025/02/14/67aed6cba9343.jpg' },
            { name: '制盐体验 | 从海水到盐粒，亲手解锁古老制盐奥秘，收获满满成就感。', price: '¥39.9', params: '制盐体验，从海水到盐粒，亲手解锁古老制盐奥秘，收获满满成就感。', img: 'https://www.helloimg.com/i/2025/02/14/67aed6c294002.jpg' },
            { name: '盐知识展览 | 穿越盐的历史长河，从起源到发展，一站式尽览。', price: '¥39.9', params: '盐知识展览，穿越盐的历史长河，从起源到发展，一站式尽览。', img: 'https://www.helloimg.com/i/2025/02/14/67aed6c282a16.jpg' },
            { name: '盐田跳伞 | 高空极速下落，邂逅盐田梦幻景致，挑战心跳极限 。', price: '¥599.9', params: '盐田跳伞，高空极速下落，邂逅盐田梦幻景致，挑战心跳极限。', img: 'https://www.helloimg.com/i/2025/02/14/67aed6c4e1ddc.jpg' }
        ];
        let loadedProducts = 2;

        function searchProducts() {
            const query = document.getElementById('search-input').value.toLowerCase();
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';
            let found = false;

            allProducts.forEach(function(product) {
                if (product.name.toLowerCase().includes(query) || product.params.toLowerCase().includes(query)) {
                    const isTourProduct = product.name.includes('盐田') || product.name.includes('体验') || product.name.includes('展览') || product.name.includes('跳伞');
                    const productItem = `
                        <div class="product-item">
                            <img src="${product.img}" alt="${product.name}">
                            <h3>${product.name}</h3>
                            <p class="price">${product.price}</p>
                            <p class="toggle-details" onclick="showProductDetails(${JSON.stringify(product)})">查看详情</p>
                            <button class="${isTourProduct ? 'reserve-btn' : 'buy-btn'}" onclick="addToCart({name: '${product.name}', price: '${product.price}'})">${isTourProduct ? '预约' : '添加至购物车'}</button>
                        </div>
                    `;
                    productList.insertAdjacentHTML('beforeend', productItem);
                    found = true;
                }
            });

            if (!found) {
                showAlert('未找到匹配的产品。您可以尝试搜索其他关键词，如“古法低钠老盐”“四阶控盐神器”“海盐冷萃咖啡棒”“海洋护齿牙膏”等');
            } else {
                document.getElementById('load-more-btn').style.display = 'block';
            }
        }

        function validateQuantity(input) {
            if (input.value < 1) {
                input.value = 1;
            }
        }

        // 绑定购买按钮和预约按钮点击事件
        function bindBuyButtons() {
            document.querySelector('.product-list').addEventListener('click', function(event) {
                if (event.target.classList.contains('buy-btn')) {
                    const product = {
                        name: event.target.parentElement.querySelector('h3').innerText,
                        price: event.target.parentElement.querySelector('.price').innerText
                    };
                    addToCart(product);
                } else if (event.target.classList.contains('reserve-btn')) {
                    const product = {
                        name: event.target.parentElement.querySelector('h3').innerText,
                        price: event.target.parentElement.querySelector('.price').innerText
                    };
                    addToCart(product);
                    alert('预约成功');
                }
            });
        }
        bindBuyButtons();

        // 加载更多产品的功能
        document.getElementById('load-more-btn').addEventListener('click', function() {
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';
            allProducts.slice(0, 4).forEach(function(product) {
                const productItem = `
                    <div class="product-item">
                        <img src="${product.img}" alt="${product.name}">
                        <h3>${product.name}</h3>
                        <p class="price">${product.price}</p>
                        <p class="toggle-details" onclick="toggleDetails(this)">查看详情</p>
                        <div class="details">
                            <p>销量：99+</p>
                            <p>产品参数：${product.params}</p>
                        </div>
                        <button class="buy-btn"><i class="fas fa-cart-plus"></i> 添加至购物车</button>
                    </div>
                `;
                productList.insertAdjacentHTML('beforeend', productItem);
            });
            loadedProducts = 4;
            this.style.display = 'none';
        });

        function showAlert(message) {
            alert(message);
        }

        // 调用 showInputModal() 函数来显示输入弹窗
        showInputModal();

        // 提交问题
        function submitQuestion() {
            const questionInput = document.getElementById('question-input');
            const question = questionInput.value.trim();
            if (question) {
                const answer = getAnswerFromKnowledgeBase(question);
                addQuestionToList(question, answer);
                questionInput.value = '';
            } else {
                alert('请输入问题');
            }
        }

        // 从知识库获取答案（模拟）
        function getAnswerFromKnowledgeBase(question) {
            const knowledgeBase = {
                '营养': '海盐富含矿物质和微量元素，如钾、钙、镁、锌、铁等。',
                '介绍': '海盐是通过露天盐田日晒的缓慢蒸发方式，使结晶作用发生在盐水表面，结出脆弱的角锥形中空薄片。入口带着矿物质和海水咸鲜味的感觉，回味中还有一丝甘甜。',
                '用途': '海盐适用于烹饪调味、腌制食品、热敷泡澡等。',
                '功效': '适量摄入海盐有助于维持人体电解质平衡，促进骨骼健康等。',
                '种类': '海盐有多种类型，包括粗海盐、精制海盐、加碘海盐、无碘海盐、海精盐，雪花盐等。'
            };
            for (const keyword in knowledgeBase) {
                if (question.includes(keyword)) {
                    return `${knowledgeBase[keyword]} <a href="#">点击查看《海盐健康白皮书》</a>`;
                }
            }
            return '“小盐正在努力充电中！<a href="#">点击查看《海盐健康白皮书》</a>”';
        }

        // 添加问答到列表
        function addQuestionToList(question, answer) {
            const qaList = document.getElementById('qa-list');
            const qaItem = document.createElement('div');
            qaItem.classList.add('qa-item');
            qaItem.innerHTML = `
                <p><strong>问：</strong>${question}</p>
                <p><strong>答：</strong>${answer}</p>
            `;
            qaList.appendChild(qaItem);
        }
    </script>
