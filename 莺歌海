    // 潮汐数据
    var tideData = [
        { time: '00:00', height: 3.0 },
        { time: '02:00', height: 2.6 },
        { time: '04:00', height: 0.8 },
        { time: '06:00', height: 1.2 },
        { time: '08:00', height: 2.1 },
        { time: '10:00', height: 2.9 },
        { time: '12:00', height: 2.3 },
        { time: '14:00', height: 1.5 },
        { time: '16:00', height: 0.7 },
        { time: '18:00', height: 1.4 },
        { time: '20:00', height: 2.5 },
        { time: '22:00', height: 3.2 }
    ];

    // 绘制潮汐曲线图
    var ctx = document.getElementById('tideChart').getContext('2d');
    var gradient = ctx.createLinearGradient(0, 0, 0, 400);
    gradient.addColorStop(0, 'rgba(54, 162, 235, 0.5)');
    gradient.addColorStop(1, 'rgba(54, 162, 235, 0)');

    var tideChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: tideData.map(tide => tide.time),
            datasets: [{
                label: '潮高 (m)',
                data: tideData.map(tide => tide.height),
                borderColor: 'rgba(54, 162, 235, 1)',
                backgroundColor: gradient,
                borderWidth: 2,
                fill: true
            }]
        },
        options: {
            scales: {
                x: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: '时间'
                    }
                },
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: '潮高 (m)'
                    }
                }
            }
        }
    });
</script>
